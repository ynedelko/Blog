<% content_for(:title, "Home") %>

<% content_for(:nav) do %>
<p><%= link_to "Home", posts_path %> | <%= link_to "Add New Post", new_post_path %> | <%= link_to "See All Tags", tags_path %> </p>
<% end %>


<h1>All Posts</h1>

<center>
<div class="row">
<% @posts.each do |post| %>
<div class="col-md-6">
<h3><%= link_to post.title, post_path(post) %></h3>
  Tags: <%= render post.tags %> <hr>
</div>
<% end %>
</div>
</center>
