<%= render "layouts/errors", :object => @post %>

<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.label :text %>
  <%= f.text_area :text %><br>
  <%= f.label :tags_seperated_by_commas %>
  <%= f.text_field :tag_list, value: @post.tag_list.join(",")%><br>
  <%= f.submit  %>
<% end %>
